<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guest.myweather.ui.WeatherDetailFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/weatherImageView2"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:background="@android:color/white"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day of the Week"
                android:id="@+id/weekDayTextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Temp"
                android:id="@+id/maxTextView2"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_below="@+id/weekDayTextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="29dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="light rain"
                android:id="@+id/descriptionTextView2"
                android:layout_below="@+id/weekDayTextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min Temp"
                android:id="@+id/minTextView2"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_alignTop="@+id/maxTextView2"
                android:layout_toRightOf="@+id/maxTextView2"
                android:layout_toEndOf="@+id/maxTextView2"
                android:layout_marginLeft="47dp"
                android:layout_marginStart="47dp" />
        </RelativeLayout>

    </LinearLayout>
</FrameLayout>